{
    "name": "__MSG_appName__",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "__MSG_appDesc__",
    "default_locale": "en",
    "icons": {
      "16": "icons/icon16.png",
      "19": "icons/icon19.png",
      "48": "icons/icon48.png",
      "60": "icons/icon60.png",
      "128": "icons/icon128.png"
    },
    "background": {
      "scripts": [
        "js/background.js",
        "js/alarm.js"
      ],
      "persistent": true
    },
    "permissions": [
      "https://*/*",
      "http://*/*",
      "storage",
      "webRequest", 
      "webRequestBlocking",
      "alarms"
    ],
    "options_page": "index.html"
  }